
#include <iostream>
#include<cstdio> 
using namespace std;
char character ;

   void mainmenu(char character);
   int main () 
 { 
  cout<<"\t\t\twelcome\n";
 cout<<"\t\t\bio*17 pharma store\n";

 cout<<"***********************\n";
 
 

 
 
 cout<< "for customers menu press C \n";
 cout <<"for products menu press P\n";
 cout<<"for suppliers menu press S\n" ;
 
 cout<<"ENTER YOUR CHOICE";
 character = getchar();
 
 
  mainmenu(character);
 
 
 
 system ("pause");

}
         


 void mainmenu(char character) {
 switch (character) {
     case'C':
     case 'c':
     cout << "for new customer press N \n";
     cout<<" for current customer press U\n\n";
    
  
     break;
     case'P':
     case'p':
     cout << "for new product press W\n";
     cout<<" for current product press E\n";
   
     break;
     case'S':
     case's':
     cout << "for new supplier press R\n";
     cout<<" for current supplier press T\n";
    
     break;
     default:
     cout<<"INVALIDE CHOICE,PLEASE TRY AGAIN";
     break;
    }}
